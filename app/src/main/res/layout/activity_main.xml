<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    tools:context=".LoginActivity"
    android:background="@drawable/black_gradient">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:src="@drawable/gglogo"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/username_login"
        android:background="@drawable/edit_text_back"
        android:layout_marginTop="32dp"
        android:drawableStart="@drawable/ic_person_outline"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/password_login"
        android:background="@drawable/edit_text_back"
        android:layout_marginTop="32dp"
        android:drawableStart="@drawable/ic_lock_outline_black"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/user"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbutton"
        android:text="@string/textLogin"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/remember" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/remember"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:text=" Remember me"
        android:layoutDirection="rtl"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintLeft_toLeftOf="parent"
    />



</androidx.constraintlayout.widget.ConstraintLayout>