<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nameProfile"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/postsNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/post"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@id/imageProfile"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/rosaChiaro"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/friendsNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/followers"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toRightOf="@id/postsNumber"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/rosaChiaro"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/nameProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/imageProfile"
        app:layout_constraintBottom_toTopOf="@id/description"
        android:background="@drawable/shape_login_edit_texts"
        android:textColor="@color/rosaChiaro"

        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/nameProfile"
        app:layout_constraintBottom_toTopOf="@id/editButton"
        android:background="@drawable/shape_login_edit_texts"
        android:textColor="@color/rosaChiaro"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/editButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edit_profile"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/description"
        android:background="@drawable/selector_login_button"
        android:textColor="@drawable/selector_login_button_text_color"

        />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/editButton"
        app:tabBackground="@drawable/tab_color_selector"
        app:tabIconTint="@color/verdeScuro"
        app:tabMode="fixed"
        >

        <com.google.android.material.tabs.TabItem
            android:id="@+id/gridTabItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_grid_on_black_24dp"
            android:visibility="gone"
            >
        </com.google.android.material.tabs.TabItem>
        <com.google.android.material.tabs.TabItem
            android:id="@+id/listTabItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_drag_handle_black_24dp"
            >
        </com.google.android.material.tabs.TabItem>
    </com.google.android.material.tabs.TabLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/profilePostGridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="64dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tabLayout"
            />





    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/profilePostListLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        android:visibility="gone"
        />



</androidx.constraintlayout.widget.ConstraintLayout>