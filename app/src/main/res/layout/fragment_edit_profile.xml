<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarEditProfile"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:background="@color/violaScuro"
        android:layout_marginTop="36dp"
        >
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/backButtonEditProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_black_24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/selector_tick_button"/>

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextAppearance.Design.CollapsingToolbar.Expanded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_profile"
            android:layout_gravity="center"
            android:textColor="@color/rosaChiaro"
            />
    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerEditableData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbarEditProfile"
        app:layout_constraintBottom_toTopOf="@id/saveEditsButton"
        android:background="@color/violaScuro">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profPicHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/violaScuro">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/profPic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="16dp"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/editPicId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="150dp"
                android:textColor="@color/rosaChiaro"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/profPic"
                app:layout_constraintRight_toLeftOf="@id/tickButton"
                app:layout_constraintTop_toTopOf="parent"
                />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/tickButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_check_black_24dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/selector_tick_button"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profPicHeader"
            android:layout_marginTop="16dp"
            android:textColor="@color/rosaChiaro"

            />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editDescription"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editUsername"
            android:textColor="@color/rosaChiaro"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/saveEditsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/containerEditableData"
        android:layout_marginTop="35dp"
        android:background="@drawable/shape_login_edit_texts"
        android:text="@string/save"
        android:textColor="@color/rosaChiaro"
        />










</androidx.constraintlayout.widget.ConstraintLayout>