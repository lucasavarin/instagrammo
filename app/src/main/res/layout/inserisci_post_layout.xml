<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/delius_unicase_bold"
        android:text="@string/app_name"
        android:layout_marginTop="12dp"
        android:textSize="30sp"
        android:textColor="@color/blue"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.example.instagrammo.customview.HeaderCustomView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:titolo="Inserisci Post"
        android:id="@+id/customAdd"
        app:button="@drawable/ic_arrow_back_black_24dp"
        app:layout_constraintTop_toBottomOf="@id/textView5"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintTop_toBottomOf="@id/customAdd"
        android:layout_marginTop="16dp"
        android:id="@+id/imgadd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgadd"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:id="@+id/fab"
        android:backgroundTint="@color/colorAccent"
        android:src="@drawable/ic_arrow_forward_black_24dp"/>

    <androidx.core.widget.ContentLoadingProgressBar
        app:layout_constraintTop_toBottomOf="@id/customAdd"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        android:layout_marginLeft="32dp"
        android:id="@+id/progressBarAddPost"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_centerHorizontal="true" />



</androidx.constraintlayout.widget.ConstraintLayout>