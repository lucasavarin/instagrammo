<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lightPurple</item>
        <item name="colorPrimaryDark">@color/darkPurple</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="EdittextStyle">
        <item name="android:textColor">@color/cardview_light_background</item>
        <item name="android:textColorHint">@color/lightGrey</item>
        <item name="android:textAlignment">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">-15dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="CheckBoxStyle">
        <item name="android:layout_gravity">left</item>
        <item name="android:text">@string/checkbox_label</item>
        <item name="android:textColor">@color/cardview_light_background</item>
    </style>

    <style name="ButtonSubmitStryle">
        <item name="android:text">@string/login_btn</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/btn_submit_background</item>
        <item name="android:textColor">@color/cardview_light_background</item>
    </style>
</resources>
