<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkPurple</item>
        <item name="colorPrimaryDark">@color/darkPurple</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleTextStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/cardview_light_background</item>
        <item name="android:textSize">45sp</item>
        <item name="android:fontFamily">@font/alien</item>
    </style>

    <style name="EdittextStyle">
        <item name="android:textColor">@color/cardview_light_background</item>
        <item name="android:textColorHint">@color/lightGrey</item>
        <item name="android:textAlignment">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">-15dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="CheckBoxStyle">
        <item name="android:layout_gravity">left</item>
        <item name="android:text">@string/checkbox_label</item>
        <item name="android:textColor">@color/cardview_light_background</item>
    </style>

    <style name="ButtonSubmitStryle">
        <item name="android:text">@string/login_btn</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/btn_submit_background</item>
        <item name="android:textColor">@color/cardview_light_background</item>
    </style>

    <style name="ConfirmBtnStyle">
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:background">@drawable/confirm_btn_background</item>
        <item name="android:drawableEnd">@drawable/baseline_check_white_18</item>
        <item name="android:paddingEnd">17dp</item>
        <item name="android:paddingStart">17dp</item>
    </style>

    <style name="NextBtnStyle">
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:background">@drawable/confirm_btn_background</item>
        <item name="android:drawableEnd">@drawable/baseline_arrow_forward_white_18</item>
        <item name="android:paddingEnd">17dp</item>
        <item name="android:paddingStart">17dp</item>
    </style>

    <style name="SaveBtnStyle">
        <item name="android:background">@drawable/save_btn_drawable</item>
        <item name="android:textColor">@color/cardview_light_background</item>
        <item name="android:text">@string/btn_salva</item>
        <item name="android:layout_marginBottom">50dp</item>
    </style>
</resources>
